<mvc:View
        controllerName="sap.ui.demo.wt.controller.Register"
        xmlns:l="sap.ui.layout"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <l:VerticalLayout
            class="sapUiContentPadding"
            width="100%">
        <Title level="H1" text="Registration"/>
        <VBox>
            <Title level="H3" text="Personal Information"/>

            <Input  value="{/fullName}"
                    valueLiveUpdate="true"
                    type="Text"
                    placeholder="Full Name"/>
            <RadioButtonGroup columns="2" width="500px">
                <buttons>
                    <RadioButton id="female" text="Female"/>
                    <RadioButton id="male" text="Male"/>
                </buttons>
            </RadioButtonGroup>
            <Input value="{/year}"
                    valueLiveUpdate="true"
                    type="Number"
                    placeholder="Year of Birth, f.ex.: 1990"/>
            <HBox class="sapUiSmallMargin">
                <Input value="{/height}"
                    valueLiveUpdate="true"
                        type="Number"
                        placeholder="Height f.ex.: 180"/>
                <Text text="cm"/>
            </HBox>
            <HBox class="sapUiSmallMargin">
                <Input value="{/weight}"
                    valueLiveUpdate="true"
                        type="Number"
                        placeholder="Weight f.ex.: 70"/>
                <Text text="kg"/>
            </HBox>
        </VBox>
        <VBox>
            <Title level="H3" text="Login Information"/>
            <Input id="emailId"
                    value="{
					path : '/email',
					type : '.typeEMail'
				}"
                   valueLiveUpdate="true"
                    type="Email"
                    placeholder="e-mail address"/>
            <Input value="{/username}"
                    valueLiveUpdate="true"
                    type="Text"
                    placeholder="username"/>
            <Input  id="passwordId"
                    value="{
						path : '/password',
						type : 'sap.ui.model.type.String',
						constraints : {
							minLength: 6,
							maxLength: 14
						}
					}"
                    valueLiveUpdate="true"
                    type="Password"
                     valueStateText="Password has to have at least six digits"
                     placeholder="password"/>
            <Input  id="password2Id"
                    value="{
						path : '/password',
						type : 'sap.ui.model.type.String',
						constraints : {
							minLength: 6,
							maxLength: 14
						}
					}"
                    valueLiveUpdate="true"
                    type="Password"
                    valueStateText="Password has to have at least six digits"
                    placeholder="repeat password"/>

        </VBox>
        <Button text="Send" press="onSignUp"/>

    </l:VerticalLayout>
</mvc:View>